CC=clang

FLAGS = \
	-DENABLE_TRACE \
	-DHOST \
	-Os \
	-Wall \
	-Wextra \
	-Wno-parentheses \
	-Wno-unused-parameter \
	-Wno-unused-variable \
	-Wshadow \
	-Wunreachable-code \
	-fomit-frame-pointer \
	-g \
	-I ../zmqpp-root/include

CXXFLAGS = \
	$(FLAGS) \
	-fsanitize=address \
	-std=c++14

LDFLAGS = \
	-L ../zmqpp-root/lib \
	-fsanitize=address \
	-lpthread \
	-lstdc++ \
	-lzmq \
	-lzmqpp
